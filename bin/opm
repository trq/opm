#!/usr/bin/env bash

OPM="`readlink -e ${0}`" ; export OPM
OPMDIR="`dirname ${OPM}`/.." ; export OPMDIR

. ${OPMDIR}/usr/lib/opm/utils.sh
. ${OPMDIR}/usr/lib/opm/setup.sh
. ${OPMDIR}/usr/lib/opm/usage.sh
. ${OPMDIR}/usr/lib/opm/main.sh
. ${OPMDIR}/usr/lib/opm/libs.sh

if [ "$1" = "sync" ] ; then
    opm_sync
elif [ -z "$2" ]; then
    usage
else
    ACTION=$2
    main
fi
