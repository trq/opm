#!/usr/bin/env bash

OPM="`readlink -e ${0}`" ; export OPM
OPMDIR="`dirname ${OPM}`/.." ; export OPMDIR

. ${OPMDIR}/usr/lib/opm/util.sh
. ${OPMDIR}/usr/lib/opm/bootstrap.sh
. ${OPMDIR}/usr/lib/opm/usage.sh
. ${OPMDIR}/usr/lib/opm/main.sh
. ${OPMDIR}/usr/lib/opm/lib.sh

if [ "$1" = "sync" ] ; then
    opm.sync
elif [ -z "$2" ]; then
    opm.usage
else
    ACTION=$2
    opm.main
fi
